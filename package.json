{
	"name": "@ingram-tech/ubl",
	"version": "0.1.0",
	"description": "UBL (Universal Business Language) invoice XML parser for TypeScript",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"lint": "eslint",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:run": "vitest --run",
		"test:coverage": "vitest --coverage",
		"ci": "npm run type-check && npm run lint && npm run test:run && npm run build"
	},
	"dependencies": {
		"@xmldom/xmldom": "^0.8.11"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"eslint": "^9.0.0",
		"prettier": "^3.8.1",
		"tsup": "^8.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.0.0",
		"vitest": "^4.0.18"
	},
	"prettier": {
		"printWidth": 88,
		"tabWidth": 4,
		"useTabs": true,
		"overrides": [
			{
				"files": "*.{yml,yaml}",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
